<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="491.0" prefWidth="744.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ClientGUI.ClientUIController">

    <children>

        <!-- Static label -->
        <Label layoutX="40.0" layoutY="38.0" text="Order Number" />

        <!-- User enters order number here -->
        <TextField fx:id="orderNumberInput"
                   layoutX="40.0" layoutY="64.0"
                   promptText="Enter order number" />

        <!-- Dynamic label showing the loaded order number from DB -->
        <Label fx:id="orderNumber"
               layoutX="250.0" layoutY="38.0"
               text="-" />

        <!-- Button: Show Reservation -->
        <Button fx:id="showReservation"
                layoutX="40.0" layoutY="101.0"
                mnemonicParsing="false"
                text="Show Reservation"
                onAction="#onShowReservationClicked" />

        <!-- Order Date -->
        <Label layoutX="40.0" layoutY="157.0" text="Order Date" />
        <TextField fx:id="orderDateField"
                   layoutX="40.0" layoutY="191.0"
                   prefWidth="150.0" />

        <!-- Number Of Guests -->
        <Label layoutX="254.0" layoutY="157.0" text="Number Of Guests" />
        <TextField fx:id="numberOfGuestsField"
                   layoutX="254.0" layoutY="191.0"
                   prefWidth="80.0" />

        <!-- Update button -->
        <Button fx:id="update"
                layoutX="461.0" layoutY="191.0"
                mnemonicParsing="false"
                text="Update"
                onAction="#onUpdateReservationClicked" />

        <!-- Reservation details text area -->
        <TextArea fx:id="reservationDetailsTextArea"
                  layoutX="40.0" layoutY="246.0"
                  prefHeight="180.0" prefWidth="667.0" />

        <!-- Exit button -->
        <Button fx:id="exit"
        layoutX="672.0"
        layoutY="444.0"
        mnemonicParsing="false"
        text="Exit"
        onAction="#onExitClicked" />

    </children>
</Pane>
